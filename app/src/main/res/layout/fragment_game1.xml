<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1_portr">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/untit1"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/playing"
        android:layout_width="match_parent"
        android:layout_height="321dp"
        android:layout_marginTop="270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image"
        app:srcCompat="@drawable/playing1"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="265dp"
        android:layout_marginHorizontal="65dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/playing"
        app:layout_constraintEnd_toEndOf="@+id/playing"
        app:layout_constraintStart_toStartOf="@+id/playing"
        app:layout_constraintBottom_toBottomOf="@+id/playing"
        tools:ignore="DisableBaselineAlignment,MissingConstraints,UselessLeaf">

        <include
            android:id="@+id/wheel1"
            layout="@layout/wheel_game1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <include
            android:id="@+id/wheel2"
            layout="@layout/wheel_game1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <include
            android:id="@+id/wheel3"
            layout="@layout/wheel_game1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <include
        android:id="@+id/balance_include"
        layout="@layout/balance_game1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="240dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image" />

    <include
        android:id="@+id/rate_include"
        layout="@layout/rate_game1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="550dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image" />

    <include
        android:id="@+id/minus"
        layout="@layout/minus_game1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/rate_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rate_include"/>

    <include
        android:id="@+id/plus"
        layout="@layout/plus_game1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rate_include"
        app:layout_constraintBottom_toBottomOf="@+id/rate_include"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:id="@+id/splin_include"
        layout="@layout/splin_game1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate_include" />

</androidx.constraintlayout.widget.ConstraintLayout>