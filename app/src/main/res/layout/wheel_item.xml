<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemImage"
            type="Integer" />

        <variable
            name="orientation"
            type="Boolean" />
    </data>

    <ImageView
        android:id="@+id/slot"
        android:layout_width="@dimen/size_image_slot"
        android:layout_height="@dimen/size_image_slot"
        app:showImage="@{itemImage}"
        tools:ignore="ContentDescription"/>
    <ImageView
        android:id="@+id/slot_land"
        android:layout_width="@dimen/size_image_slot_land"
        android:layout_height="@dimen/size_image_slot_land"
        app:showImage="@{itemImage}"
        tools:ignore="ContentDescription"/>

</layout>