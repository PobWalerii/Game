<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="rate"
            type="Integer" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rate1"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/game1_rate"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_rate"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/rate1"
        app:layout_constraintStart_toStartOf="@+id/rate1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/value_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{rate.toString()}"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rate1"
        app:layout_constraintStart_toStartOf="@+id/rate1"
        app:layout_constraintTop_toBottomOf="@id/text_rate"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>